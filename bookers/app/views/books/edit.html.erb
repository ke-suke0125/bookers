<h1>Editing Book</h1>
<div class="error">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
<div class="form">
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br>

  <%= f.submit 'Update Book' %>

  <br>

  <%= link_to "Show", book_path(@book.id) %>

  |

  <%= link_to "Back", "/books" %>
</div>


<% end %>