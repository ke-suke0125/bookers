<h1>Books</h1>

<table>
  <div class="tr">
   <p class="th">Title</p>
   <p class="th">Body</p>
   <p class="th"></P>
  </div>

 <% @books.each do |book|  %>
   <span class="tr">
     <div class="td">
       <%= book.title %>
     </div>
     <div class="td">
       <%= book.body %>
     </div>

  <div class="ts">
   <span>
     <%= link_to "Show", "/books/#{book.id}" %>
   </span>

    &nbsp;

   <span>
     <%= link_to "Edit", "/books/#{book.id}/edit" %>
   </span>

   &nbsp;

   <span>
      <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
   </span>
  </div>
   <br>
   </span>
  <% end %>
<table>

<h3>New book</h3>
<div class="error">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="form">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br>

    <%= f.submit 'Create Book' %>
  </div>

<% end %>